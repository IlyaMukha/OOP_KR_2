<Window x:Class="KR_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
    <Grid>
        <StackPanel >
            <Button x:Name="_create" Content="Create Book" Margin="200 10 200 0" Click="_create_Click"></Button>
            <Button x:Name="_show" Content="Show all" Margin="200 10 200 0" Click="_show_Click"></Button>
            <Button x:Name="_save" Content="Save" Margin="200 10 200 0" Click="_save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
